<div class="post-edit">
    <div class="di">

        <div class="di">
            <h3>заголовок:</h3>
            <input type="text" placeholder="Название истории" data-field="caption" value='{{model.caption}}'>
        </div>

        <div class="di">
            <h3>отрасль:</h3>
            <select data-field="categoryId">
                {{#each categories}}
                    <option id='{{@key}}'
                            {{#equals @key ../model.categoryId}}
                                selected="selected"
                            {{/equals}}
                            >{{this}}</option>
                {{/each}}
            </select>
        </div>
    </div>

    <div class="di">
        <h3>текст:</h3>
        <div class="btn-toolbar" data-role="editor-toolbar" data-target="#editor">
            <div class="btn-group">
                <div  class="item" data-edit="bold" title="Bold (Ctrl/Cmd+B)"><b>Жирный</b></div>
                <div  class="item" data-edit="italic" title="Italic (Ctrl/Cmd+I)"><i>Курсив</i></div>
                <div  class="item" data-edit="strikethrough" title="Strikethrough"><s>Зачеркнутый</s></div>
                <div  class="item" data-edit="underline" title="Underline (Ctrl/Cmd+U)"><u>Подчеркнутый</u></div>
                <div  class="item" data-edit="indent" title="Выделение">Выделение</div>
            </div>

            <div class="btn-group">
                <div  class="item" title="Вставить изображение" id="pictureBtn">Изображение</div>
                <input type="file" data-role="magic-overlay" data-target="#pictureBtn" class="pictureBtnInput" data-edit="insertImage"/>
            </div>
        </div>
        <div id="editor" data-field="text" data-get-pre-send>{{model.text}}</div>
    </div>

    <div class="di">
        <h3>аннотация:</h3>
        <div id="cleartxt" data-field='preview' data-get-pre-send>{{model.preview}}</div>
    </div>


    <div class="di t-center">

        <a class="btn" data-send-button>Опубликовать</a>
        {{#if model.id}}
        <a class="btn" data-delete-button>Удалить</a>
        {{/if}}
        <a class="mLeft10" data-to-mode="preview">Превью</a>
    </div>
</div>