<div class='element' id='{{model.id}}'>

    <article>
        <h3 ><input type='text' value='{{model.caption}}' data-field='caption' placeholder='Заголовок'/></h3>
    </article>

    <div class="di">
        <div class="post-edit-tools">
            <div class="item"><b>b</b></div>
            <div class="item"><b><i>It</i></b></div>
            <div class="item"><b>Quote</b></div>
            <div class="item">Upload a picture</div>
            <div class="clearfix"></div>
        </div>
        <textarea class="big" placeholder="Ваш ответ" data-field='answer' >{{model.answer}}</textarea>
    </div>

    <div class="di t-center">
        <a  class="btn" data-send-button>Опубликовать!</a>
        {{#if model.id}}
            <a  class="btn close-question mLeft10" data-delete-button>Удалить</a>
        {{/if}}
        <a  class="mLeft10" data-to-mode="passive">Отмена</a>
    </div>

</div>